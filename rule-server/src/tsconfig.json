{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES2017",
        "removeComments": false,
        "noEmitOnError": true,
        "inlineSources": true,
        "inlineSourceMap": true,
        "moduleResolution": "node",
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "outDir": "../dist",
        "baseUrl": "",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true
    },
    "include": ["./**/*"],
    "exclude": ["./static"]
}
