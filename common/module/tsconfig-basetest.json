{
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "lib": ["es2016", "esnext", "dom"],
        "declaration": true,
        "allowJs": true,
        "removeComments": false,
        "noEmitOnError": true,
        "sourceMap": true,
        "alwaysStrict": true,
        "esModuleInterop": true,
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.js",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "coverage",
        ".nyc_output"
    ]
}