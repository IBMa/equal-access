{
    "compilerOptions": {
        "declaration": true,
        "allowJs": false,
        //"target": "ES5",
        "target": "ESNext",
        "removeComments": false,
        "noEmitOnError": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,  //comment out due to umd module
        "module": "commonjs",
        "outDir": "dist",
        "emitDecoratorMetadata": true,
        "lib": [
            "dom",
            //"es7"
            "ESNext"
         ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "coverage",
        ".nyc_output"
    ]
}