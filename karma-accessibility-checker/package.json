{
  "name": "karma-accessibility-checker-project",
  "version": "3.0.0",
  "description": "Accessibility Checker for Karma Test Framework",
  "main": "src/index.js",
  "scripts": {
    "setup": "npm-run-all startLocalRuleServer",
    "installPlugin": "npm install ./package/karma-accessibility-checker",
    "lint:src": "eslint src",
    "lint:test": "eslint test",
    "test": "npm-run-all build installPlugin test:client",
    "test:client": "karma start",
    "test:server:mocha": "mocha test/server/**/*.spec.js --compilers js:babel/register",
    "test:server:ava": "ava --verbose",
    "startLocalRuleServer": "forever start RuleServerLocal.js",
    "dependencies": "gulp --gulpfile gulp/gulpfile.js dependencies",
    "build:report": "(cd ../report-react && npm run build && cd ../karma-accessibility-checker && shx cp ../report-react/build/genReport.js ./src/lib/reporters/)",
    "build:doc": "gulp --gulpfile gulp/gulpfile.js build-doc",
    "build": "npm run build:report && gulp --gulpfile gulp/gulpfile.js build",
    "deploy": "gulp --gulpfile gulp/gulpfile.js --user $GSA_USER --pw $GSA_PASS upload",
    "uploadCoverage": "gulp --gulpfile gulp/gulpfile.js --user $GSA_USER --pw $GSA_PASS uploadCoverage",
    "localDevInstall": "cd src && npm link && npm link karma-ibma",
    "coverage:istanbul": "istanbul cover node_modules/mocha/bin/_mocha -- --compilers js:babel/register test/server/**/*.spec.js",
    "coverage:nyc": "nyc npm run test:server:ava"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com/IBMa/equal-access/karma-accessibility-checker"
  },
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "ci",
    "integration",
    "continuous",
    "karma-ibma",
    "karma",
    "karma-plugin",
    "a11y",
    "accessibility",
    "IBMa",
    "karma-framework",
    "karma-reporter",
    "karma-preprocessor"
  ],
  "author": "Tom Brunet <thbrunet@us.ibm.com>",
  "license": "SEE LICENSE IN LICENSE from the 'equal-access' repository",
  "dependencies": {
    "deep-diff": "1.0.2",
    "fs": "0.0.2",
    "fs-extra": "10.0.0",
    "js-yaml": "4.1.0",
    "karma": "6.3.18",
    "path": "0.12.7",
    "promise": "8.1.0",
    "request": "2.72.0",
    "shelljs": "0.8.4",
    "slack": "11.0.2",
    "slack-node": "0.1.8",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "adm-zip": "^0.5.9",
    "ava": "^3.15.0",
    "babel": "^5.8.38",
    "chai": "^4.3.4",
    "decache": "^4.6.1",
    "difflet": "^1.0.1",
    "eslint": "^7.12.1",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-standard": "^4.1.0",
    "express": "^4.17.1",
    "forever": "^4.0.1",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-concat": "^2.6.1",
    "gulp-download": "0.0.1",
    "gulp-flatten": "^0.4.0",
    "gulp-git": "^2.10.1",
    "gulp-insert": "^0.5.0",
    "gulp-jsdoc3": "^3.0.0",
    "gulp-jsonminify": "^1.1.0",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.3",
    "gulp-sftp": "^0.1.5",
    "gulp-ssh": "^0.7.0",
    "gulp-uglify": "^3.0.2",
    "gulp-unzip": "^1.1.0",
    "gulp-zip": "^5.1.0",
    "istanbul": "^0.4.3",
    "jasmine-core": "^3.10.1",
    "jsdoc": "^3.6.7",
    "karma-chrome-launcher": "^3.1.0",
    "karma-cli": "^2.0.0",
    "karma-coverage": "^2.1.0",
    "karma-firefox-launcher": "^2.1.2",
    "karma-html2js-preprocessor": "^1.1.0",
    "karma-ie-launcher": "^1.0.0",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-diff-reporter": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.7.0",
    "karma-spec-reporter": "^0.0.32",
    "mocha": "^9.1.3",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "serve-index": "^1.9.1",
    "shx": "^0.3.3",
    "sinon": "^12.0.1",
    "tap-diff": "^0.1.1",
    "tap-difflet": "^0.7.2",
    "tap-mocha-reporter": "^5.0.1",
    "tap-nyan": "^1.1.0",
    "tap-prettify": "0.0.2",
    "tap-spec": "^5.0.0",
    "url-exists": "^1.0.3"
  },
  "ava": {
    "files": [
      "test/server/**/*.js",
      "!test/server/**/*.spec.js",
      "!test/server/unitTestCommon/**/*.js"
    ],
    "match": [],
    "concurrency": 8,
    "failFast": false,
    "power-assert": true,
    "tap": false
  }
}
